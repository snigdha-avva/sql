create database dec12;
use dec12;

CREATE TABLE employees (
    emp_id INT PRIMARY KEY,
    full_name VARCHAR(100),
    email VARCHAR(100),
    department VARCHAR(50),
    city VARCHAR(50),
    salary VARCHAR(20),
    remarks VARCHAR(200)
);

